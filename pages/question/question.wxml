<!--pages/question/question.wxml-->
<view class="main">
  <swiper style="height:{{swiperHeight}}px" duration="{{swiperDuration}}" current="{{swiperCurrent}}" bindchange="swiperChange" circular>
    <swiper-item wx:key="this" wx:for="{{swiperList}}">

      <view class="page-item" wx:if="{{item.index != null}}">
        <view class="count-box">
          <text class="text-current-count" wx:if="{{item.index != null || item.index < 0}}">{{item.index + 1}}</text>
          <text class="text-total-count" wx:if="{{item.totalCount != null && item.totalCount != 0}}">/{{item.totalCount}}</text>
        </view>
        <view class="content"> 这是第{{item.index + 1}}题</view>
        <button class="btn-answer-card" catchtap="onClickAnswerCard">答题卡</button>
      </view>

    </swiper-item>
  </swiper>

  
</view>
